{
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.69.1.wasm",
		"https://plugins.dprint.dev/json-0.15.3.wasm"
	],
	"includes": ["*.{ts,tsx,js,jsx,json}", "build/bin", "build/index.d.ts"],
	"excludes": ["node_modules", "*-lock.json", "build"],
	"indentWidth": 2,
	"lineWidth": 80,
	"useTabs": true,
	"typescript": {
		"exportDeclaration.sortNamedExports": "maintain",
		"importDeclaration.sortNamedImports": "maintain",
		"arrowFunction.useParentheses": "preferNone",
		"module.sortImportDeclarations": "maintain",
		"binaryExpression.linePerExpression": true,
		"memberExpression.linePerExpression": true,
		"trailingCommas": "onlyMultiLine",
		"singleBodyPosition": "maintain",
		"operatorPosition": "sameLine",
		"bracePosition": "maintain",
		"preferSingleLine": false,
		"quoteProps": "asNeeded",
		"useBraces": "maintain",
		"semiColons": "always"
	}
}
